<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="validationrule" method="upgrade">
	<name>Is unique</name>
	<author>Rob Clayburn</author>
	<creationDate>Aug 2008</creationDate>
	<copyright>(C) 2005-2006 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Determines if the data entered already exists in the database table</description>
	<files>
		<filename fabrikplugin="isuniquevalue">isuniquevalue.php</filename>
		<filename>index.html</filename>
	</files>
	<params repeat="1" repeatcontrols="0">
		<param type="text" name="isuniquevalue-message" size="30" label="Error message" value="" description="VALIDATIONERRORDESC" />
		<param type="textarea" cols="30" rows="5" name="isuniquevalue-validation_condition" label="Condition" description="VALIDATIONCONDITIONDESC"/>
		<param name="isuniquevalue-caseinsensitive" type="radio" default="0" label="Case insensitive search" description="">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>